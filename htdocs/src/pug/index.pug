//- CONTENT DATA
-
    //- Accordions
    const accordions = [
        { title: 'Title 1', text: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut.' },
        { title: 'Title 2', text: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut.' },
        { title: 'Title 3', text: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut.' },
    ];

    //- KV Slider
    const kv_slider = [
        { image: 'topKVSlide_01.jpg', text: 'Slide 1' },
        { image: 'topKVSlide_02.jpg', text: 'Slide 2' },
        { image: 'topKVSlide_03.jpg', text: 'Slide 3' },
    ];

    //- Custom select
    const countries = [
        { name: 'Australia', value: '0'},
